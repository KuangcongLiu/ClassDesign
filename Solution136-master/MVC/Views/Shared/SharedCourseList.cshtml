@{
    ViewBag.Title = "Course List";
}
<h3>Course List Page</h3>
<div id="divSharedCourseList">
    <table>
        <thead>
            <tr>
                <th>Course ID</th>
                <th>Course Title</th>
                <th>Course Level</th>
                <th>Course Description</th>
                <th>Department Id</th>
            </tr>
        </thead>
        <tbody data-bind="foreach: viewModel">
            <tr>
                <td data-bind="text: course_id"></td>
                <td data-bind="text: course_title"></td>
                <td data-bind="text: course_level"></td>
                <td data-bind="text: course_description"></td>
                <td data-bind="text: department_id"></td>
                <td>
                    <!-- Note, this is an example using knockout templating. $data is the keyword
                         to for each element of the viewModel array -->
                    <div data-bind="template: { name: 'action-template', data: $data}"></div>
                </td>
            </tr>
        </tbody>
    </table>
    <div data-bind="template: { name: 'action-template2', data: $data}"></div>
</div>


<script type="text/javascript">
    $(document).ready(function () {
        var courseViewModelObj = new CourseViewModel();
        courseViewModelObj.GetCourseList();
    });
</script>
