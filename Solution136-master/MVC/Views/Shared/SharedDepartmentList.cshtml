@{
    ViewBag.Title = "Department List";
}

<h3>Department List Page</h3>
<div id="divSharedDepartmentList">
    <table>
        <thead>
            <tr>
                <th>Department Id</th>
                <th>Departmnet Name</th>
                <th>Department Description</th>
            </tr>
        </thead>
        <tbody data-bind="foreach: viewModel">
            <tr>
                <td data-bind="text: department_id"></td>
                <td data-bind="text: department_name"></td>
                <td data-bind="text: department_description"></td>
                <td>
                    <!-- Note, this is an example using knockout templating. $data is the keyword
            to for each element of the viewModel array -->
                    <div data-bind="template: { name: 'action-template', data: $data}"></div>
                </td>
            </tr>
        </tbody>
    </table>
    <div data-bind="template: { name: 'action-template2', data: $data}"></div>
</div>


<script type="text/javascript">
    $(document).ready(function () {
        var departmentViewModelObj = new DepartmentViewModel();
        departmentViewModelObj.GetDepartmentList();
    });
</script>
